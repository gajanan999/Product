<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.TextFieldTableCell?>

<StackPane maxHeight="600.0" maxWidth="1000.0" minHeight="600.0" minWidth="1000.0" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.billdiary.ui.ManageCustomerController">
   <children>
      <ScrollPane maxHeight="600.0" maxWidth="1000.0" minHeight="600.0" minWidth="1000.0" prefHeight="600.0" prefWidth="1000.0">
         <content>
            <Pane maxHeight="600.0" maxWidth="995.0" minHeight="600.0" minWidth="990.0" prefHeight="600.0" prefWidth="995.0">
               <children>
                  <Text layoutX="43.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer Name" />
                  <TextField fx:id="customerName" layoutX="140.0" layoutY="29.0" />
                  <Text layoutX="43.0" layoutY="98.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer ID" />
                  <TextField layoutX="140.0" layoutY="81.0" />
                  <Separator layoutX="8.0" layoutY="133.0" prefHeight="3.0" prefWidth="964.0" />
                  <TableView fx:id="customerTable" editable="true" layoutX="10.0" layoutY="146.0" prefHeight="245.0" prefWidth="960.0">
                    <columns>
                      <TableColumn id="customerID" editable="false" prefWidth="75.0" text="Customer ID">
                            <cellValueFactory>
							<PropertyValueFactory property="customerID" />
							</cellValueFactory>
					  </TableColumn>
                      <TableColumn id="customerName" onEditCommit="#setEditedValue" prefWidth="75.0" text="Customer Name">
                      		<cellValueFactory>
							<PropertyValueFactory property="customerName" />
							</cellValueFactory>
							<cellFactory>
							<TextFieldTableCell fx:factory="forTableColumn" />
							</cellFactory>	
					  </TableColumn>
                        <TableColumn id="address" onEditCommit="#setEditedValue" prefWidth="75.0" text="Address">
                            <cellValueFactory>
							<PropertyValueFactory property="address" />
							</cellValueFactory>
							<cellFactory>
							<TextFieldTableCell fx:factory="forTableColumn" />
							</cellFactory>
                        </TableColumn>
                        <TableColumn id="emailID" onEditCommit="#setEditedValue" prefWidth="75.0" text="Email ID">
                           <cellFactory>
                              <TextFieldTableCell fx:factory="forTableColumn" />
                           </cellFactory>
                           <cellValueFactory>
                              <PropertyValueFactory property="emailID" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn id="mobileNO" onEditCommit="#setEditedValue" prefWidth="75.0" text="Mobile No">
                        	<cellValueFactory>
							<PropertyValueFactory property="mobile_no" />
							</cellValueFactory>
							<cellFactory>
							<TextFieldTableCell fx:factory="forTableColumn" />
							</cellFactory>
						</TableColumn>
                        <TableColumn id="city" onEditCommit="#setEditedValue" prefWidth="75.0" text="City">
                        	<cellValueFactory>
							<PropertyValueFactory property="city" />
							</cellValueFactory>
							<cellFactory>
							<TextFieldTableCell fx:factory="forTableColumn" />
							</cellFactory>
                        </TableColumn>
                        <TableColumn id="country" onEditCommit="#setEditedValue" prefWidth="75.0" text="Country">
                        	<cellValueFactory>
							<PropertyValueFactory property="country" />
							</cellValueFactory>
							<cellFactory>
							<TextFieldTableCell fx:factory="forTableColumn" />
							</cellFactory>
                        </TableColumn>
                        <TableColumn id="joiningDate" onEditCommit="#setEditedValue" prefWidth="75.0" text="Joining Date" />
                        <TableColumn prefWidth="75.0" text="Action">
                       		<cellValueFactory>
								<PropertyValueFactory property="actionbox" />
							</cellValueFactory>
							
						</TableColumn>
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Button layoutX="10.0" layoutY="402.0" mnemonicParsing="false" onAction="#showAddCustomer" prefHeight="25.0" prefWidth="126.0" text="New Customer" />
                  <Button layoutX="140.0" layoutY="402.0" mnemonicParsing="false" onAction="#deleteCustomer" prefHeight="25.0" prefWidth="116.0" text="Delete " />
                  <Button layoutX="854.0" layoutY="102.0" mnemonicParsing="false" onAction="#searchCustomer" prefHeight="25.0" prefWidth="116.0" text="Search" />
                  <Button layoutX="260.0" layoutY="402.0" mnemonicParsing="false" onAction="#saveCustomer" prefHeight="25.0" prefWidth="116.0" text="Save " />
                  <Button layoutX="318.0" layoutY="29.0" mnemonicParsing="false" onAction="#filter" text="Filter" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Pane>
         </content>
      </ScrollPane>
   </children>
</StackPane>
